<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <EditText
        android:id="@+id/fragment_group_plan_nameET"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="群任务名"/>


    <Button
        android:id="@+id/fragment_group_plan_dateTimeBt"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="日期"/>
   
 
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务完成所需周期数："/>
        <EditText
            android:id="@+id/fragment_group_plan_frequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number|none"
            android:gravity="left"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成进度"/>
        <ProgressBar
            android:id="@+id/fragment_group_plan_progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="?android:progressBarStyleHorizontal"
            android:max="100"/>
    </LinearLayout>
    <Button
        android:id="@+id/fragment_group_plan_finishToday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="今日打卡"/>
</LinearLayout>